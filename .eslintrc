{
  "root": true,
  "env": {
    "browser": true,
    "node": true,
    "jest/globals": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "semi": 0,
    "object-curly-spacing": "off",
    "space-before-function-paren": 0,
    "computed-property-even-spacing": "off",
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js"
        ]
      }
    ]
  },
  "plugins": [
    "jest"
  ],
  "extends": [
    "airbnb"
  ]
}
